# Don't search through minified assets
--type-set=minifiedcss=.min.css
--type-set=minifiedjs=.min.js
--nominifiedcss
--nominifiedjs

# Sort files
--sort-files

# only search with case sensitivity if there is mixed case
--smart-case

# General
--ignore-dir=cache
--ignore-dir=logs
--ignore-dir=tmp
--ignore-dir=.git/

# Node
--ignore-dir=node_modules/
--ignore-dir=dist/
--ignore-dir=build/

# Clojure
--type-add=cljs=.cljs
--type-add=edn=.edn
